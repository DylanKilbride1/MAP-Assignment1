<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/SubscriptionActivitiesPadding"
    tools:context=".Activities.StandardSubscriptionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/standardActivityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Standard Subscription Homepage"
            android:textColor="#5a0d7300"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/standardActivityWelcomeMsg"
            android:layout_below="@+id/standardActivityTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text=""
            android:textSize="20dp"/>
    </RelativeLayout>

</LinearLayout>