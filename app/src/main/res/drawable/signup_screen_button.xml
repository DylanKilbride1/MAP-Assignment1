<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/edittext_rounded_corners.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <stroke android:color="@color/colorSignUpScreenButtonNormal"
                android:width="2dp"/>
            <corners
                android:radius="30dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/colorSignUpScreenButtonPressed"
                android:width="2dp"/>
            <corners
                android:radius="30dp" />
        </shape>
    </item>
</selector>